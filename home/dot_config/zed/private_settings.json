// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  // Presentation settings
  "agent": {
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini"
    },
    "model_parameters": []
  },
  "theme": "Catppuccin Macchiato",
  "icon_theme": "Material Icon Theme",
  "ui_font_size": 15,
  "buffer_font_family": "JetBrains Mono",
  "buffer_font_size": 13,
  "terminal": {
    "font_family": "MesloLGS Nerd Font",
    "font_size": 13,
    "line_height": "standard",
    "blinking": "on"
  },
  "show_whitespaces": "all",
  "minimap": { "show": "always", "current_line_highlight": "all" },
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_diagnostics": "errors"
  },
  "outline_panel": {
    "dock": "right"
  },
  "soft_wrap": "editor_width",
  "wrap_guides": [88],
  "scrollbar": { "axes": { "horizontal": false } },

  // General
  "auto_update": true,
  "base_keymap": "VSCode",

  "languages": {
    "Markdown": { "completions": { "words": "disabled" } },
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "format_on_save": "on"
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "format_on_save": "on"
    },
    "TSX": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "format_on_save": "on"
    },
    "Python": {
      "language_servers": ["basedpyright", "ruff"],
      "format_on_save": "on",
      "formatter": [{ "language_server": { "name": "ruff" } }]
    },
    "Go": {
      "language_servers": ["gopls", "golangci-lint"],
      "format_on_save": "on",
      "formatter": [
        {
          "external": {
            "command": "golangci-lint",
            "arguments": ["fmt", "--stdin"]
          }
        }
      ]
    }
  },
  "lsp": {
    "tailwindcss-language-server": {
      "settings": {
        "experimental": {
          "classRegex": [
            // tailwind-variant
            ["tv\\({([^]*?)}\\)", "[\"'`]([^\"'`]*)[\"'`]"],
            // clsx
            [
              "clsx\\(((?:[^()]|\\([^()]*\\))*)\\)",
              "(?:'|\"|`)([^']*)(?:'|\"|`)"
            ]
          ]
        }
      }
    },
    "golangci-lint": {
      "initialization_options": {
        "command": [
          "golangci-lint",
          "run",
          "--output.json.path",
          "stdout",
          "--show-stats=false",
          "--output.text.path="
        ]
      }
    }
  },
  "inlay_hints": {
    "show_background": false,
    "enabled": false,
    "toggle_on_modifiers_press": { "control": true, "alt": true }
  },
  "diagnostics": {
    "button": true,
    "include_warnings": true,
    "inline": {
      "enabled": true,
      "update_debounce_ms": 300,
      "padding": 4,
      "min_column": 0,
      "max_severity": null
    }
  }
}
